# ------------------------------------------------------------------
# GregoryAI environment configuration
# Copy this file to .env and fill in the values for your deployment.
# ------------------------------------------------------------------

# --- Domain ---
DOMAIN_NAME=DOMAIN.COM

# --- PostgreSQL ---
POSTGRES_DB="PICK-A-DATABASE-NAME"
POSTGRES_PASSWORD=PICK-A-PASSWORD
POSTGRES_USER=PICK-A-USERNAME

# --- Django ---
# Generate a unique secret key — see https://docs.djangoproject.com/en/4.0/ref/settings/#secret-key
SECRET_KEY=''
GREGORY_DIR="<where you cloned the repository>/"

# Encryption key for sensitive database fields (EncryptedTextField).
# Generate with:  python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_SECRET_KEY=''

# --- Email / SMTP ---
EMAIL_DOMAIN=''
EMAIL_HOST=''
EMAIL_HOST_PASSWORD=''
EMAIL_HOST_USER=''
EMAIL_PORT=587
EMAIL_USE_TLS='True'

# Postmark transactional email service.
# The preferred approach is to set credentials per-team in the Django admin
# (Team → postmark_api_token / postmark_api_url). These env vars are used as
# a fallback when team-level credentials are not configured.
EMAIL_POSTMARK_API=''
EMAIL_POSTMARK_API_URL=''

# --- ORCID API ---
ORCID_ClientID='YOUR APP ID FOR ORCID'
ORCID_ClientSecret='APP SECRET FOR ORCID'